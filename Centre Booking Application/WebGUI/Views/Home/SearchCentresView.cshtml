<div id="searchCentresDiv">
    <p>Search centres names (partial string match allowed) as a general user (not for admins). Also case-sensitive.</p>
    <input type="text" id="CentreName" name="CentreName" placeholder="Centre Name" />
    <button onclick="searchCentres()">Search</button>
</div>

<script>
    function searchCentres() 
    {
        $.ajax(
            {
                url: '/home/searchcentres/?centrename=' + $('#CentreName').val(),
                type: 'get',
                contentType: 'application/json',
                processData: false,
                success: function (data, textStatus, jQxhr) 
                {
                    $(".content").html(data);
                },
                error: function (jqXhr, textStatus, errorThrown) 
                {
                    console.log(errorThrown);
                }
            })
    }
</script>