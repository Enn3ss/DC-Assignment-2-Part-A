<div id="insertCentreDiv">
    <p>Add a centre to the centre list as an admin (not for general users).</p>
    <input type="text" id="CentreId" name="CentreId" placeholder="Centre ID" />
    <input type="text" id="CentreName" name="CentreName" placeholder="Centre Name" />
    <button onclick="insertCentre()">Insert</button>
</div>

<script>
    function insertCentre() 
    {
        $.ajax(
            {
                type: 'POST',
                url: '/home/insertcentre',
                contentType: 'application/json',
                data: JSON.stringify(
                    {
                        "Id": $("#CentreId").val(),
                        "CentreName": $("#CentreName").val()
                    }),
                success: function (data, textStatus, jQxhr) 
                {
                    alert("Centre has been inserted.");
                },
                error: function (xhr, textStatus, error) 
                {
                    alert("Error in adding centre! You may not be an admin or the Centre ID may be invalid.");
                    console.log(xhr.statusText);
                    console.log(textStatus);
                    console.log(error);
                }
            })
    }
</script>